% Set Background Picture
%------------------------------------------------------------------------------
\usepackage{transparent}
\usepackage{eso-pic}

\newcommand{\BackgroundPic}[1]{%
\AddToShipoutPicture*{
\put(0,0){%
\parbox[b][\paperheight]{\paperwidth}{%
\vfill
\centering
{\transparent{0.8} \includegraphics[%
width=\paperwidth,%
%height=\paperheight,%
keepaspectratio]{%
#1}}%
\vfill
}}}}

% Set Blankpage
%------------------------------------------------------------------------------
\usepackage{afterpage}

\newcommand\blankpage{
    \null
    \thispagestyle{empty}
    \addtocounter{page}{-1}
    \newpage
}

% Set Running Footer
%------------------------------------------------------------------------------
\newcommand\runningfooter[2]{
\fancyfoot[LE]{#1} \fancyfoot[RE]{#2 \hspace{1em} \thepage}
\fancyfoot[LO]{\thepage \hspace{1em} #2} \fancyfoot[RO]{#1}
}

% Color Bar (HTML)
%------------------------------------------------------------------------------
\newcommand\colorbar[3]{
\textcolor[HTML]{#1}{\rule{#2}{#3}}
}

% Color Palette (HTML)
%------------------------------------------------------------------------------
\newcommand\cp[1]{
\textcolor[HTML]{#1}{\rule{10pt}{10pt}}\hspace{5pt}#1
}
